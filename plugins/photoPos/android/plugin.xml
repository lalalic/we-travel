<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android"
        id="com.red_folder.phonegap.plugin.backgroundservice.sample"
        version="2.0.0">

    <name>photo taken position</name>

    <description>
        content observer to get photo taken position
    </description>

    <license>Apache 2.0</license>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>

	<!-- Load in the core background service -->
	<dependency id="com.red_folder.phonegap.plugin.backgroundservice" url="https://github.com/Red-Folder/bgs-core.git"/>

    <!-- android -->
    <platform name="android">

		<js-module src="www/photoPos.js" name="PhotoPos">
			<clobbers target="PhotoPos" />
		</js-module>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
  
            <service android:name="com.lalalic.wetravel.PhotoPos">
                <intent-filter>         
                    <action android:name="com.lalalic.wetravel.PhotoPos"/> 
                </intent-filter>     
            </service>
            
        </config-file>
        
        <source-file src="src/com/lalalic/wetravel/PhotoPos.java" target-dir="src/com/lalalic/wetravel" />
    </platform>
	
</plugin>